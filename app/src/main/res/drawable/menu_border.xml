            <stroke
                android:width="1dp"
                android:color="@color/divider" />

            <solid android:color="@android:color/white" />

            <padding
                android:bottom="6dp"
                android:left="6dp"
                android:right="6dp"
                android:top="6dp" />
        </shape>
    </item>
</layer-list>